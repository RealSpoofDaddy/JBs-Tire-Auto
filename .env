# MongoDB Connection String
# Replace 'your-database-name' with your preferred database name
MONGODB_URI=mongodb://localhost:27017/jbs-tire-auto

# For MongoDB Atlas (cloud), use this format instead:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jbs-tire-auto

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=jbs-tire-auto-super-secret-jwt-key-development-only-change-in-production
JWT_REFRESH_SECRET=jbs-tire-auto-super-secret-refresh-key-development-only-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration (for future payment integration)
# Add your Stripe secret key when ready for payment processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Additional required variables
LOG_LEVEL=info
BCRYPT_ROUNDS=12
SESSION_SECRET=jbs-tire-auto-session-secret-key-development
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:5000/api
